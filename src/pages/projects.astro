---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Projects</div>
  </div>

  <HorizontalCard
    title="Fila Online"
    img="/fila.webp"
    desc="Queue management system that shows your queue position in realtime. Made with Angular, NodeJS and Firebase."
    url="https://filaonlineapp.com.br/"
    target="_blank"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Tkron"
    img="/tkron.webp"
    desc="Complete clothing industry management app and dashboard. Has production control, chronometry and human resources. Made with Angular, NodeJS and Firebase."
    url="https://www.tkron.net/"
    target="_blank"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Agenda Online"
    img="/agenda.webp"
    desc="Complete scheduling app that includes user booking by link. Made with Vue, NodeJS and Supabase."
    url="https://onlineagenda.com.br/"
    target="_blank"
    badge="NEW"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Pager Online"
    img="/pager.webp"
    desc="Pager app for food halls and fast food. Notifies the user when the order is ready. Made with React, NodeJS and SurrealDB."
    url="#"
    badge="NEW"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="IBL Fiscal"
    img="/fiscal.webp"
    desc="Complete ERP with invoicing and taxes for small and medium businesses."
    url="#"
  />

</BaseLayout>
