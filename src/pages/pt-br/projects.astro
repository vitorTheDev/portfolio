---
import BaseLayout from "../../layouts/BaseLayout.astro";
import HorizontalCard from "../../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Projects</div>
  </div>

  <HorizontalCard
    title="Fila Online"
    img="/fila.webp"
    desc="Sistema de controle de filas que mostra a posição em tempo real. Feito com Angular, Node.js e Firebase."
    url="https://filaonlineapp.com.br/"
    target="_blank"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Agenda Online"
    img="/agenda.webp"
    desc="App completo de agendamento que inclui agendamento por link. Feito com Vue, NodeJS e Supabase."
    url="https://onlineagenda.com.br/"
    target="_blank"
    badge="NEW"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Pager Online"
    img="/pager.webp"
    desc="App de pager para fast-foods e áreas de alimentação. Notifica o usuário quando seu pedido estiver pronto. Feito com React, NodeJS e SurrealDB."
    url="https://pageronline.com.br"
    target="_blank"
    badge="NEW"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Tkron"
    img="/tkron.webp"
    desc="App e dashboard completos para indústria de vestuário. Possui controle de produção, cronometria e R.H. Feito com Angular, NodeJS e Firebase."
    url="https://www.tkron.net/"
    target="_blank"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="IBL Fiscal"
    img="/fiscal.webp"
    desc="ERP completo para negócios locais com emissão de NF-e."
    url="#"
  />

</BaseLayout>
